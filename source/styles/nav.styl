.language-selector
  padding .5em
  border-radius 14em
  font-size .8em
  user-select none
  position relative
  display flex

  &:focus
    outline none

  &.dropdown-open
    .dropdown
      display flex
      position: absolute;
      right: 20px;
      top: 70px;


    .selector-label
      opacity 1

  @media mobileMaxWidthQuery
    font-size 1em
    top 12px
    right 12px

  .selector-label
    display flex
    align-items center
    justify-content flex-end
    opacity .8
    transition opacity .2s

    &:hover
      opacity 1

    @media mobileMaxWidthQuery
      font-size 2rem

    .fa-globe
      margin-right .5em

    .fa-caret-down
      margin-right .5em

    .chosen-language
      margin-right .5em
      word-break keep-all

  .dropdown
    margin-top .5em
    flex-flow column
    text-align left
    padding .2em 0.8em .2em .8em
    display none
    min-width: 155px;
    float: right;

    border-radius 3px;
    background-color white;
    box-shadow #ccc 0px 3px 4px;
    transition  all 0.4s ease 0s;


    .language
      color inherit
      text-decoration none
      line-height 1.7

      &:hover
        text-decoration underline

    @media mobileMaxWidthQuery
      background rgba(0,0,0,.9)
      font-size 2rem
      padding .2em 0.8em .2em .8em

      .language
        line-height 2

.message
  &.center
    text-align center
    .message-content
      display inline-block

.message-content
  border-radius 3px
  background rgba(0,0,0,0.6)
  color white
  padding 1rem 1.5rem
  font-size .8em
  line-height 1.6

p.collapsed-margins
  margin 0

ul, ol
  @media mobileMaxWidthQuery
    margin-left 0
    padding-left 1em

  > li + li
    margin-top .5em

  li > ul, li > ol
    margin-top .5em

.tc
